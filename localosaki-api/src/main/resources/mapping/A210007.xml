<beanio xmlns="http://www.beanio.org/2012/03" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.beanio.org/2012/03 http://www.beanio.org/2012/03/mapping.xsd">

    <!-- *** 気象予報データ送信 テンプレート *** -->
    <!-- ベース部分 -->
    <template name="base">
        <field name="productCd" length="2" keepPadding="true" />
        <field name="address" length="2" keepPadding="true" />
        <field name="command" length="5" default="SM000" keepPadding="true" />
        <field name="sendDate" length="10" keepPadding="true"/>
        <field name="compressionDataLength" length="6"  default="000000" keepPadding="true"/>
    </template>

    <template name="base.res">
        <field name="productCd" length="2" keepPadding="true" />
        <field name="address" length="2" keepPadding="true" />
        <field name="command" length="5" keepPadding="true" />
        <field name="sendDate" length="10" keepPadding="true"/>
        <field name="compressionDataLength" length="6" keepPadding="true"/>
    </template>

    <!-- 共通部分（送信用） -->
    <template name="commonRequest">
        <segment name="forecastList" collection="list" occurs="117" class="map">
            <field name="mdh" length="6" default="      " keepPadding="true"/>
            <field name="weather" length="2" default="  " keepPadding="true"/>
            <field name="barometricPressure" length="6" default="      " keepPadding="true"/>
            <field name="rainAmount" length="4" default="    " keepPadding="true"/>
            <field name="windDirection" length="2" default="  " keepPadding="true"/>
            <field name="windSpeed" length="3" default="   " keepPadding="true"/>
            <field name="temperature" length="4" default="    " keepPadding="true"/>
            <field name="humidity" length="3" default="   " keepPadding="true"/>
            <field name="cloudAmount" length="1" default=" " keepPadding="true"/>
        </segment>
    </template>

    <!-- 「00」非対応 -->
    <!-- 送信文 -->
    <stream name="00.req" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>
    <!-- 受信文 -->
    <stream name="00.res" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>

    <!-- 「03」非対応 -->
    <!-- 送信文 -->
    <stream name="03.req" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>
    <!-- 受信文 -->
    <stream name="03.res" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>

    <!-- 「06」非対応 -->
    <!-- 送信文 -->
    <stream name="06.req" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>
    <!-- 受信文 -->
    <stream name="06.res" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>

    <!-- 「12」非対応 -->
    <!-- 送信文 -->
    <stream name="12.req" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>
    <!-- 受信文 -->
    <stream name="12.res" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>

    <!-- 「21」非対応 -->
    <!-- 送信文 -->
    <stream name="21.req" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>
    <!-- 受信文 -->
    <stream name="21.res" format="fixedlength">
        <record name="dummy">
            <field name="dummy" length="0" />
        </record>
    </stream>

    <!-- 「22」製品に対する設定 -->
    <!-- 送信文 -->
    <stream name="22.req" format="fixedlength">
        <record name="param" template="base" class="jp.co.osaki.osol.mng.param.A210007Param">
            <include template="commonRequest" />
        </record>
    </stream>
    <!-- 受信文 -->
    <stream name="22.res" format="fixedlength">
        <record name="response" template="base.res" class="jp.co.osaki.osol.mng.param.A210007Param">
        </record>
    </stream>

</beanio>